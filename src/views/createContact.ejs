<%- include('./includes/head.ejs') %>
    <%- include('./includes/nav.ejs') %>
        <div class="contanier">
            <div class="row ml-0 mr-0">
                <div class="col-lg-2 my-3"></div>
                <% if (!user) {%>
                    <div class="col-lg-8 my-3">
                        <h1 class="text-center">Deslogado</h1>
                        <p class="text-center lead">Faça o login para conseguir visualizar o conteúdo</p>
                    </div>
                    <% } else { %>
                        <div class="col-lg-8 my-3">
                            <h1 class="text-center">Criar contato</h1>
                            <p class="text-center lead">Insira a informação do contato que deseja salvar</p>
                            <%- include('./includes/flashMessage.ejs') %>

                                <div class="row my-5">
                                    <div class="col-lg">
                                        <form action="/contact/create" method="post">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <div class="form-group">
                                                <label for="name">Nome</label>
                                                <input type="text" name="name" class="form-control" placeholder="Nome">
                                            </div>
                                            <div class="form-group">
                                                <label for="middlename">Sobrenome</label>
                                                <input type="text" name="middlename" class="form-control"
                                                    placeholder="Sobrenome">
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Email</label>
                                                <input type="email" name="email" class="form-control"
                                                    placeholder="Email">
                                            </div>
                                            <div class="form-group">
                                                <label for="cellphone">Número celular</label>
                                                <input type="tel" name="cellphone" class="form-control"
                                                    placeholder="Telefone celular">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Inserir contato</button>
                                        </form>
                                    </div>
                                </div>
                                <div class="col-lg-2 my-3"></div>
                        </div>
                        <% } %>
            </div>
            <%- include('./includes/footer.ejs') %>