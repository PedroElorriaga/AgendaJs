<%- include('./includes/head.ejs') %>
    <%- include('./includes/nav.ejs') %>
        <div class="contanier">
            <div class="row ml-0 mr-0">
                <div class="col-lg-2 my-3"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Login</h1>
                    <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
                    <%- include('./includes/flashMessage.ejs') %>

                        <div class="row my-5">
                            <div class="col-lg">
                                <h4 class="text-center">Criar conta</h4>
                                <p class="text-center lead">Caso não possua a conta, crie uma agora mesmo</p>
                                <form action="/login/create" method="post">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        <input type="email" name="email" class="form-control" placeholder="Seu email">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Senha</label>
                                        <input type="password" name="password" class="form-control" placeholder="Senha">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Cria conta</button>
                                </form>
                            </div>

                            <div class="col-lg">
                                <h4 class="text-center">Logar na conta</h4>
                                <p class="text-center lead">Insira suas informações para acessar sua conta</p>
                                <form action="/login/in" method="post">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        <input type="email" name="email" class="form-control" placeholder="Seu email">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Senha</label>
                                        <input type="password" name="password" class="form-control" placeholder="Senha">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Entrar</button>
                                </form>
                            </div>
                        </div>
                </div>
                <div class="col-lg-2 my-3"></div>
            </div>
        </div>
        <%- include('./includes/footer.ejs') %>