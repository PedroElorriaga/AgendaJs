<%- include('./includes/head.ejs') %>
    <%- include('./includes/nav.ejs') %>
        <div class="contanier">
            <div class="row ml-0 mr-0">
                <div class="col-lg-2 my-3"></div>
                <% if (!user) {%>
                    <div class="col-lg-8 my-3">
                        <h1 class="text-center">Deslogado</h1>
                        <p class="text-center lead">Faça o login para conseguir visualizar o conteúdo</p>
                    </div>
                    <% } else { %>
                        <div class="col-lg-8 my-3">
                            <h1 class="text-center">Editar o contato de <%= contactFromDb.name%>
                            </h1>
                            <p class="text-center lead">Atualize as informações do seu contato</p>
                            <%- include('./includes/flashMessage.ejs') %>

                                <div class="row my-5">
                                    <div class="col-lg">
                                        <form action="/contact/edit/<%= id%>" method="post">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <div class="form-group">
                                                <label for="name">Nome</label>
                                                <input type="text" name="name" class="form-control" placeholder="Nome"
                                                    value="<%= contactFromDb.name %>" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="middlename">Sobrenome</label>
                                                <input type="text" name="middlename" class="form-control"
                                                    placeholder="Sobrenome" value="<%= contactFromDb.middlename %>"
                                                    required>
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Email</label>
                                                <input type="email" name="email" class="form-control"
                                                    placeholder="Email" value="<%= contactFromDb.email %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="cellphone">Número celular</label>
                                                <input type="tel" name="cellphone" class="form-control"
                                                    placeholder="Telefone celular"
                                                    value="<%= contactFromDb.cellphone %>" required>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Atualizar contato</button>
                                        </form>
                                    </div>
                                </div>
                                <div class="col-lg-2 my-3"></div>
                        </div>
                        <% } %>
            </div>
            <%- include('./includes/footer.ejs') %>